# Java Development Agent Environment Configuration
# Copy this file to .env and update the values

# ===== Neo4j Database Configuration =====
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# ===== GPT-OSS-20B Model Configuration =====
# Option 1: Local model path
MODEL_PATH=/path/to/gpt-oss-20b/model

# Option 2: API configuration (if using hosted service)
API_KEY=your_api_key_here

# Model parameters
MODEL_NAME=gpt-oss-20b
MAX_TOKENS=2048
TEMPERATURE=0.7

# ===== Agent Configuration =====
MAX_CONTEXT_LENGTH=4096
CODE_ANALYSIS_DEPTH=3

# ===== Java Development Configuration =====
# Optional: Java installation paths
JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
MAVEN_HOME=/usr/share/maven

# ===== API Server Configuration =====
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== Performance Tuning =====
# GPU settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Memory settings
MAX_MEMORY_GB=8
BATCH_SIZE=1

# ===== Development Settings =====
DEBUG_MODE=false
ENABLE_METRICS=true
CACHE_ENABLED=true
CACHE_SIZE=100